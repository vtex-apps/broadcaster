{
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema",
  "name": "broadcaster",
  "vendor": "vtex",
  "version": "0.5.5-beta.1",
  "title": "Broadcaster Listener",
  "description": "Reference app for VTEX IO Services",
  "dependencies": {
    "vtex.catalog-api-proxy": "0.x",
    "vtex.catalog-graphql": "1.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/segments/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/tenant/tenants"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "vtex.catalog-graphql:resolve-graphql"
    }
  ],
  "settingsSchema": {
    "title": "VTEX Broadcaster Listener",
    "type": "object",
    "properties": {
      "enabled": {
        "title": "Enable listening to SKU and product modifications from catalog.",
        "type": "boolean",
        "default": true,
        "description": "Enables listening to the Broadcaster events related to modifications of SKU and/or products in the catalog."
      },
      "alwaysNotify": {
        "title": "Always notify",
        "type": "boolean",
        "default": false,
        "description": "Disables filter that allows notification only when the data has changed."
      }
    }
  }
}
