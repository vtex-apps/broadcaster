{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 10,
  "workers": 4,
  "routes": {
    "notify": {
      "path": "/notify",
      "public": false,
      "access": "authorized",
      "policies": [
        {
          "effect": "allow",
          "actions": ["post"],
          "principals": ["vrn:apps:*:{{account}}:*:app/vtex.broadcaster@*"]
        }
      ]
    }
  }
}
